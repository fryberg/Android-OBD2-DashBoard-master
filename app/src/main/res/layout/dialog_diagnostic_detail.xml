<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_popup_top">

        <TextView
            android:id="@+id/title"
            style="@style/DialogTitleText"
            android:drawableLeft="@drawable/ic_dtcs01"
            android:text="@string/dtc_group01_title" />

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_cancel" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_popup_middle"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/dtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff4d4d"
            android:textSize="18dp"
            tools:text="P0002" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="12dp"
            tools:text="@string/dtc_group01_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/text"
        style="@style/DialogBottomText"
        android:text="@string/diagnostic_detail_text" />
</LinearLayout>