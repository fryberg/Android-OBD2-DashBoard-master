<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:background="@drawable/bg_center_connect"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/center_connect_padding_left_right"
        android:paddingRight="@dimen/center_connect_padding_left_right">

        <ImageView
            android:id="@+id/iv_mil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_mil" />

        <ImageView
            android:id="@+id/iv_obd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/check_obd" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/indicator_pane"
        android:layout_width="110dp"
        android:layout_height="167dp"
        android:background="@drawable/bg_center_indicator"
        android:layout_marginTop="6dp"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volt_off" />

            <ImageView
                android:id="@+id/cb_idle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_idle" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_coolant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_temp_off" />

            <ImageView
                android:id="@+id/cb_harsh_accel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_harsh_accel" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_eco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eco_off" />

            <ImageView
                android:id="@+id/cb_harsh_brake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_harsh_brake" />
        </TableRow>
    </TableLayout>
</LinearLayout>