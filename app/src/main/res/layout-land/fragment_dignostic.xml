<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp">

            <ImageView
                android:id="@+id/layer_diagnostic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:src="@drawable/layer_diagnostic" />

            <ImageView
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:src="@drawable/btn_refresh" />

            <TextView
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_dtc_reset"
                android:gravity="center"
                android:text="@string/diagnostic_dtc_reset"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"

                tools:background="#ffff00">

                <TextView
                    android:id="@+id/btn_dtc01"
                    style="@style/DiagnosticIconText"
                    android:text="@string/dtc_group01_title"
                    app:drawableTopCompat="@drawable/btn_dtc01" />

                <TextView
                    android:id="@+id/btn_dtc02"
                    style="@style/DiagnosticIconText"
                    android:text="@string/dtc_group02_title"
                    app:drawableTopCompat="@drawable/btn_dtc02" />

                <TextView
                    android:id="@+id/btn_dtc03"
                    style="@style/DiagnosticIconText"
                    android:text="@string/dtc_group03_title"
                    app:drawableTopCompat="@drawable/btn_dtc03" />

                <TextView
                    android:id="@+id/btn_dtc04"
                    style="@style/DiagnosticIconText"
                    android:text="@string/dtc_group04_title"
                    app:drawableTopCompat="@drawable/btn_dtc04" />

                <TextView
                    android:id="@+id/btn_dtc05"
                    style="@style/DiagnosticIconText"
                    android:text="@string/dtc_group05_title"
                    app:drawableTopCompat="@drawable/btn_dtc05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_dtc06"
                    style="@style/DiagnosticIconText"
                    android:drawableTop="@drawable/btn_dtc06"
                    android:text="@string/dtc_group06_title" />

                <TextView
                    android:id="@+id/btn_dtc07"
                    style="@style/DiagnosticIconText"
                    android:drawableTop="@drawable/btn_dtc07"
                    android:text="@string/dtc_group07_title" />

                <TextView
                    android:id="@+id/btn_dtc08"
                    style="@style/DiagnosticIconText"
                    android:drawableTop="@drawable/btn_dtc08"
                    android:text="@string/dtc_group08_title" />

                <TextView
                    android:id="@+id/btn_dtc09"
                    style="@style/DiagnosticIconText"
                    android:drawableTop="@drawable/btn_dtc09"
                    android:text="@string/dtc_group09_title" />

                <TextView
                    android:id="@+id/btn_dtc10"
                    style="@style/DiagnosticIconText"
                    android:drawableTop="@drawable/btn_dtc10"
                    android:text="@string/dtc_group10_title" />
            </LinearLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:background="#2e2e2e"
                android:gravity="center"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:textColor="#ffffff"
                android:textSize="12dp"
                tools:text="@string/diagnostic_message_warning" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>